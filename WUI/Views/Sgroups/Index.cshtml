@model IEnumerable<DbLayer.Sgroup>

@{
    ViewData["Title"] = "Groups";
}

<h2>Groups</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SgroupName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Specialization)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SgroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SgroupId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SgroupId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SgroupId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
