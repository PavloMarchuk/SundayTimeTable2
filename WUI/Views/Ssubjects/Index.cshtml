@model IEnumerable<DbLayer.Ssubject>

@{
    ViewData["Title"] = "Subjects";
}

<h2>Subjects</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SsubjectName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SsubjectName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SsubjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SsubjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SsubjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
